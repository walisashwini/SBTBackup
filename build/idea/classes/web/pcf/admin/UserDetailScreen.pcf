<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <Screen
    id="UserDetailScreen">
    <Require
      name="user"
      type="User"/>
    <Toolbar>
      <ToolbarButtonSetRef
        toolbarButtonSet="UserDetailToolbarButtonSet(user)"/>
    </Toolbar>
    <CardViewPanel>
      <Card
        id="UserDetail_BasicCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetail.Basic&quot;)">
        <PanelRef
          def="UserDetailDV(user, true)">
          <Toolbar/>
        </PanelRef>
      </Card>
      <Card
        id="UserDetail_AttributesCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetail.Attributes&quot;)"
        visible="perm.User.manageattributes">
        <PanelRef
          def="UserAttributesLV(user)">
          <Toolbar>
            <IteratorButtons
              addVisible="perm.User.manageattributes"
              iterator="UserAttributesLV.UserAttributesLV"
              removeVisible="perm.User.manageattributes"/>
          </Toolbar>
        </PanelRef>
      </Card>
      <Card
        id="UserDetail_AccessCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetailDV.ProducerGroupsAndCode&quot;)"
        visible="user.Organization != null">
        <PanelRef
          def="UserDetail_AccessDV(user)"
          editable="true">
          <Toolbar/>
        </PanelRef>
      </Card>
      <Card
        id="UserDetail_RolesCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetailDV.Roles&quot;)">
        <PanelRef
          def="UserRolesLV(user)"
          editable="perm.System.usergrantroles">
          <Toolbar>
            <IteratorButtons
              iterator="UserRolesLV.UserRolesLV"/>
          </Toolbar>
        </PanelRef>
      </Card>
      <Card
        id="UserDetail_ProfileCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetail.Profile&quot;)">
        <PanelRef
          def="UserProfileDV(user)">
          <Toolbar/>
        </PanelRef>
      </Card>
      <Card
        id="UserDetail_RegionCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetail.Region&quot;)">
        <PanelRef
          def="UserRegionLV(user)">
          <Toolbar>
            <IteratorButtons
              iterator="UserRegionLV.UserRegionLV"/>
          </Toolbar>
        </PanelRef>
      </Card>
      <Card
        id="UserDetail_AuthorityCard"
        title="DisplayKey.get(&quot;Web.Admin.UserDetail.UWAuthority&quot;)"
        visible="perm.System.authprofileassignview">
        <PanelRef
          def="UserAuthorityLV(user)"
          editable="perm.System.authprofileassignedit">
          <Toolbar>
            <IteratorButtons
              iterator="UserAuthorityLV.UserAuthorityLV"/>
          </Toolbar>
        </PanelRef>
      </Card>
    </CardViewPanel>
  </Screen>
</PCF>
<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <ListViewPanel
    id="DesktopSubmissionsLV"
    stretch="true"
    mode="default">
    <!-- "Submissions" actually includes both Submissions and Issuances -->
    <Variable
      initialValue="Job.finder.findSubmissionsAndIssuancesByUser(User.util.CurrentUser)"
      name="submissions"
      recalculateOnRefresh="true"
      type="gw.api.database.IQueryBeanResult&lt;entity.Job&gt;"/>
    <RowIterator
      appendPageInfo="true"
      editable="false"
      elementName="submission"
      value="submissions"
      valueType="gw.api.database.IQueryBeanResult&lt;entity.Job&gt;">
      <ToolbarFilter
        name="submissionsFilter">
        <ToolbarFilterOptionGroup
          filters="gw.api.web.desktop.DesktopJobFilters.filters()"/>
        <ToolbarFilterOption
          filter="gw.api.web.desktop.DesktopJobFilters.openIssuanceJobFilter()"
          label="DisplayKey.get(&quot;Java.Desktop.ToolbarFilter.Jobs.OpenIssuance&quot;)"/>
        <ToolbarFilterOptionGroup
          filters="gw.api.web.desktop.DesktopJobFilters.producerFilters()"
          visible="perm.System.viewproducerstyledesktopdetails"/>
      </ToolbarFilter>
      <IteratorSort
        sortBy="submission.SelectedVersion.EditEffectiveDate"
        sortOrder="1"/>
      <Row>
        <TextCell
          action="JobForward.go(submission)"
          available="submission.Viewable"
          grow="true"
          id="Insured"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.Insured&quot;)"
          value="submission.PrimaryInsuredName"/>
        <DateCell
          id="EffectiveDate"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.EffectiveDate&quot;)"
          sortDirection="descending"
          value="submission.SelectedVersion.EditEffectiveDate"
          wrap="false"/>
        <DateCell
          enableSort="false"
          id="QuoteNeeded"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.QuoteNeeded&quot;)"
          value="submission.DateQuoteNeeded"
          wrap="false"/>
        <TextCell
          action="JobForward.go(submission)"
          id="SubmissionNumber"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.SubmissionNumber&quot;)"
          value="submission.JobNumber"
          wrap="false"/>
        <TextCell
          enableSort="false"
          id="Type"
          label="DisplayKey.get(&quot;Web.DesktopJobsLV.Type&quot;)"
          value="submission.DisplayType"
          wrap="false"/>
        <TextCell
          enableSort="false"
          id="SubmissionStatus"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.SubmissionStatus&quot;)"
          value="submission.DisplayStatus"
          wrap="false"/>
        <BooleanRadioCell
          enableSort="false"
          id="Issued"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.Issued&quot;)"
          value="submission.Policy.Issued"
          wrap="false"/>
        <TextCell
          id="Product"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.Product&quot;)"
          sortBy="submission.Policy.ProductCode"
          value="submission.Policy.Product"
          valueType="gw.api.productmodel.Product"
          wrap="false"/>
        <AltUserCell
          enableSort="false"
          grow="true"
          id="Producer"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.Producer&quot;)"
          value="submission.getUserRoleAssignmentByRole( TC_PRODUCER ).AssignedUser"
          visible="!perm.System.viewproducerstyledesktopdetails"/>
        <AltUserCell
          enableSort="false"
          grow="true"
          id="Underwriter"
          label="DisplayKey.get(&quot;Web.DesktopSubmissionsLV.Underwriter&quot;)"
          value="submission.getUserRoleAssignmentByRole( TC_UNDERWRITER ).AssignedUser"
          visible="perm.System.viewproducerstyledesktopdetails"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>